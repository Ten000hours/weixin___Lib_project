/**app.wxss**/
.container{
  height: 15%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 0;
  box-sizing: border-box;
  margin-top: 10rpx;
} 
/**app.wxss**/
@import 'weui.wxss';

page{
   height: 100%;
   background-color: #fbf9fe;
}

.flex-wrp-row{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.flex-wrp-column{
  display: flex;
  flex-direction: column;
}

.flex-item{
  flex: 1;
}


.flex-row{
	display: flex;
  width: 100%;
  box-sizing: border-box
}

