.wx-grid{
  width:100%;
  overflow: hidden;
}
.wx-grid-item{
  float: left;
  width: 33.3%;
  box-sizing: border-box;
}

.mobi_title{
	font-size: 15px;
	color: #777;
  line-height: 110%;
  font-weight: normal;
	width: 100%;
  padding: 10px;
  background-color: #f3f3f3;
  position: relative;
}
.mobi_icon{
	padding: 0px 1.5px;
  border-radius: 1.5px;
  background-color: #ff7777;
  position: relative;
  margin-right: 5px;
}