page{
    background: url("http://www.siliangjiadan.cn/img/timg.jpg") fixed;
    background-size: 100% 100%;
    width: 100%;
    height: 100%;
    font-family: "微软雅黑";
}
.mask{
  width:100%;
  height: 100%;
  background: #fff;
  opacity: 0.6;
  position: absolute;
  position: fixed;
  z-index: -1;
}

.communicates {
  margin: 0rpx 35rpx 60rpx 35rpx;
  padding-top:  10rpx;
  border-bottom: solid 0.5rpx lightgray;
}

.content {
  word-break: break-all;
  font-size: 14px;
}

.item {
  display: flex;
  position: relative;
  padding: 15rpx 0rpx; 
  margin-bottom: 1px;
  border-top: solid 0.5rpx lightgray;
}

.item-right {
  width: 100%;
}

.item .top {
  display: flex;
  justify-content: space-between;
  margin-bottom: 3px;
}

.item .user-name {
  color: sandybrown;
  font-size: 14px;
}

.item .time {
  color: gray;
  font-size: 12px;
}

.item-content{
  font-size: 30rpx;
  line-height: 45rpx;
}

.input-icon{
  width: 75rpx;
  height: 75rpx;
  position: absolute;
  bottom: 50rpx;
  right: 50rpx;
  position: fixed;
}

