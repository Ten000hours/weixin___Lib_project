page{
    background: url("http://www.siliangjiadan.cn/img/background.jpg") fixed;
    background-size: 100% 100%;
    width: 100%;
    height: 100%;
}
.mask{
  width:100%;
  height: 100%;
  background: #fff;
  opacity: 0.5;
  position: absolute;
  position: fixed;
}
.header{
    height: 108rpx;
    width: 100%;
    background: #333;
    padding-top: 28rpx;
    position: fixed;
    z-index: 1;
}
.header-scan{
     width: 75rpx;
    height: 75rpx;
    position: relative;
    bottom: 78rpx;
    left: 23rpx;
}
.header-search{
    width: 75rpx;
    height: 75rpx;
    float: right;
    position: relative;
    bottom: 78rpx;
    right: 23rpx;
}
.header-input{
    width: 520rpx;
    height: 80rpx;
    margin: auto;
    background: white;
    border-radius: 15rpx;
    text-align: center;
}
.standAplace{
    height: 136rpx;
}
.mobi_title{
    padding: 10rpx 0rpx;
    margin-bottom:0rpx; 
}
.insideBox{
    border-bottom: solid gray 1rpx;
    margin: 0rpx 15rpx;
}
.list{
    height: 150rpx;
    font-family: "微软雅黑";
    border:solid gray 1rpx; 
    color: gray;
    overflow: hidden;
    border-left:0rpx; 
    border-right: 0rpx;
    border-bottom: 0rpx;
}
.list-img{
    height: 140rpx;
    float: left;
}
.video-img{
    width:105rpx;
    height: 140rpx;
    margin: 5rpx 40rpx 0rpx 10rpx;
    box-shadow: 0rpx 0rpx 20rpx black;
}
.list-detail{ 
    margin-left: 90rpx;
}
.list-title{
    width: 100%;
    font-size: 35rpx;
    color: #3B3B3B;
    font-weight: bold;
    margin-top: 20rpx;
}
.list-infor{
    font-size: 29rpx
}
.list-brief{
    position: relative;
    right: 12rpx;
    font-size: 26rpx;
}
.classification-title{
    margin-left: 38rpx;
    font-family: "微软雅黑";
    font-size: 40rpx;
    font-weight: bold;
}
.classification-type{
    width: 213rpx;
    height: 75rpx;
    line-height: 75rpx;
    float: left;
    margin-left: 30rpx;
    margin-top: 20rpx;
    font-size: 35rpx;
    font-family: "微软雅黑";
    background: transparent;
}
.classification-type:hover{
    background: transparent;
}
.history{
    clear: both;
    font-size: 28rpx;
    padding-left: 28rpx;
    padding-top: 40rpx;
    color: #333;
    width: 100%;
}
.history-title{
    float: left;
}
.history-del{
    width: 130rpx;
    float: right;
    margin-right: 30rpx;
}
.history-del-icon{
    width: 35rpx;
    height: 35rpx;
    float: left;
    margin-right: 5rpx;
}
.history-item{
    clear:both;
    font-size: 30rpx;
    float: left;
    color: gray;
    width: 100%;
    margin-top: 40rpx;
}
.history-item-icon{
    width: 35rpx;
    height: 35rpx;
    float: left;
    margin-right: 40rpx;
}
.history-item-cont{
    float: left;
}

