page {
  background: url("http://www.siliangjiadan.cn/img/timg.jpg") fixed;
  background-size: 100% 100%;
  width: 100%;
  height: 100%;
}

.mask {
  width: 100%;
  height: 100%;
  background: #fff;
  opacity: 0.5;
  position: absolute;
  position: fixed;
}

.header {
  height: 108rpx;
  width: 100%;
  background: #333;
  padding-top: 28rpx;
  position: fixed;
  z-index: 1;
}

.header-scan {
  width: 75rpx;
  height: 75rpx;
  position: relative;
  bottom: 78rpx;
  left: 23rpx;
}

.header-search {
  width: 75rpx;
  height: 75rpx;
  float: right;
  position: relative;
  bottom: 78rpx;
  right: 23rpx;
}

.header-input {
  width: 520rpx;
  height: 80rpx;
  margin: auto;
  background: white;
  border-radius: 15rpx;
  text-align: center;
}

.standAplace {
  height: 136rpx;
}

.mobi_title {
  padding: 10rpx 0rpx;
  margin-bottom: 0rpx;
}

.insideBox {
  margin: 0rpx 15rpx;
}

.list {
  height: 150rpx;
  font-family: "微软雅黑";
  border-bottom: solid lightgray 1rpx;
  color: gray;
  overflow: hidden;
}

.list-img {
  height: 140rpx;
  float: left;
}

.video-img {
  width: 105rpx;
  height: 140rpx;
  margin: 5rpx 40rpx 0rpx 10rpx;
}

.list-detail {
  margin-left: 90rpx;
}

.list-title {
  width: 100%;
  font-size: 35rpx;
  color: black;
  font-weight: bold;
  margin-top: 20rpx;
}

.list-infor {
  font-size: 29rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.list-brief {
  position: relative;
  font-size: 26rpx;
}

.classification {
  width: 100%;
  height: 210rpx;
  border-bottom: solid 2rpx #fff;
}

.classification-type {
  width: 200rpx;
  margin-right: 50rpx;
  display: inline-block;
  padding-bottom: 10rpx;
}

.classification-icon {
  width: 55rpx;
  height: 55rpx;
  margin-right: 50rpx;
  position: relative;
  top: 25rpx;
  left: 50rpx;
}

.classification-title {
  margin-left: 75rpx;
  font-family: "微软雅黑";
  font-size: 32rpx;
  position: relative;
  bottom: 35rpx;
  left: 45rpx;
}

.history {
  clear: both;
  font-size: 28rpx;
  padding-left: 45rpx;
  padding-top: 40rpx;
  color: #333;
  width: 100%;
}

.history-title {
  float: left;
}

.history-del {
  width: 130rpx;
  float: right;
  position: relative;
  right: 80rpx;
}

.history-del-icon {
  width: 35rpx;
  height: 35rpx;
  float: left;
  margin-right: 5rpx;
}

.history-item {
  clear: both;
  font-size: 30rpx;
  float: left;
  color: gray;
  width: 100%;
  margin-top: 40rpx;
}

.history-item-icon {
  width: 35rpx;
  height: 35rpx;
  float: left;
  margin-right: 40rpx;
}

.history-item-cont {
  float: left;
}
