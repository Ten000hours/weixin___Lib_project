page {
  background: #f0f0f0;
  font-family: "微软雅黑";
}

.forbalance {
  height: 200rpx;
  width: 100%;
  padding-top: 40rpx;
  background: #404040;
}

.forbalance .fornum {
  height: 160rpx;
  width: 400rpx;
  margin: auto;
}

.fornum .icon {
  width: 75rpx;
  height: 75rpx;
  margin-left: 162.5rpx;
}

.forbalance .num {
  font-size: 30rpx;
  color: white;
  text-align: center;
}

.tab {
  width: 750rpx;
  height: 126rpx;
  border-bottom: solid lightgray 1rpx;
}

.tab-item {
  width: 250rpx;
  height: 120rpx;
  float: left;
  line-height: 120rpx;
  text-align: center;
}

.list {
  height: 200rpx;
  color: gray;
  overflow: hidden;
  border-bottom: solid lightgray 1rpx;
}

.list-img {
  width: 135rpx;
  height: 180rpx;
  margin: 10rpx 40rpx 0rpx 20rpx;
  float: left;
}

.list-detail {
  margin-left: 90rpx;
  font-size: 30rpx;
  margin-top: 22rpx;
}

.list-pay {
  font-size: 40rpx;
  color: #6495ed;
}

.list-title {
  width: 100%;
  font-size: 32rpx;
  color: #3b3b3b;
  font-weight: bold;
  margin-top: 15rpx;
}

.list-btn {
  width: 130rpx;
  float: right;
  position: relative;
  bottom: 180rpx;
}

.btn {
  width: 120rpx;
  height: 70rpx;
  border-radius: 5rpx;
  line-height: 70rpx;
  text-align: center;
  margin-top: 25rpx;
  margin-right: 20rpx;
  font-size: 32rpx;
}

.standAPlace {
  height: 105rpx;
}

.forbut {
  width: 100%;
  position: absolute;
  position: fixed;
  bottom: -1rpx;
  z-index: 1;
}

.forbut .but {
  width: 50%;
  float: left;
  height: 105rpx;
  line-height: 105rpx;
  text-align: center;
  border-radius: 0rpx;
}
