page {
  width: 100%;
  height: 100%;
  background: url("http://www.siliangjiadan.cn/img/timg.jpg") fixed;
  background-size: 100% 100%;
  font-family: "微软雅黑";
  font-weight: 450;
}

.warning{
  text-align: center;
  background: #FF6347;
  line-height: 80rpx;
}

.tab {
  width: 750rpx;
}

.tab-return{
  position: absolute;
  width: 68rpx;
  height: 68rpx;
  left: 25rpx;
  top: 26rpx;
}

.tab-item {
  width: 100%;
  height: 120rpx;
  background: #333;
  font-size: 40rpx;
  color: #148cca;
  line-height: 120rpx;
  text-align: center;
}

.main {
  clear: both;
  padding: 50rpx 15rpx;
}

input {
  border-bottom: solid 1rpx lightgray;
  text-align: center;
}

.book-type{
  position: relative;
  left: 310rpx;
  top: 5rpx;
  text-align: center;
  border-bottom: solid 1rpx lightgray;
}

.book-time{
  position: relative;
  left: 280rpx;
  top: 5rpx;
  text-align: center;
  border-bottom: solid 1rpx lightgray;
}

.bookimage {
  width: 240rpx;
  height: 320rpx;
  margin-left: 255rpx;
  box-shadow: 0rpx 0rpx 25rpx #333;
}

.book-upload {
  float: right;
  position: relative;
  right: 90rpx;
  top: 220rpx;
  color: gray;
  text-align: center;
  font-size: 25rpx;
}

.book-upload image {
  width: 70rpx;
  height: 70rpx;
}

.book-info {
  margin: 0 25rpx;
}

.book-info-style {
  font-size: 30rpx;
}

.book-infor-title {
  position: relative;
  top: 45rpx;
}

.brief-view {
  margin-left: 20rpx;
}

.breif-view-title {
  position: relative;
  right: 20rpx;
}

.brief-view-content {
  font-size: 29rpx;
  line-height: 40rpx;
  color: #333;
}

.btn {
  border: 0;
  color: black;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 33rpx;
  background: limegreen;
  margin: 80rpx 25rpx 140rpx 25rpx;
}
